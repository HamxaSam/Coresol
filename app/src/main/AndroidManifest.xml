<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.hamza.coresol">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/coresol"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ActivitiesClasses.Activities.IntroActivity">
        </activity>
        <activity android:name=".ActivitiesClasses.Activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ActivitiesClasses.Activities.NevigationDrawerActivity">
        </activity>
        <activity android:name=".ActivitiesClasses.Fragments.HomeFragment">
        </activity>
        <activity android:name=".ActivitiesClasses.Activities.SearchActivity">
        </activity>
        <activity android:name=".ActivitiesClasses.Activities.VideoPlayerActivity">
        </activity>
    </application>

</manifest>