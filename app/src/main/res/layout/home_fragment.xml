<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorback"

    tools:context="com.example.hamza.coresol.ActivitiesClasses.Fragments.HomeFragment">


    <TextView
        android:id="@+id/textView_TopRated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TopRated Movie's"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="10sp"
        android:layout_marginStart="5dp"
        android:textStyle="italic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="HardcodedText,SmallSp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView_ScrollMovie"/>

    <TextView
        android:id="@+id/textView_MostVisited"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Most Visited Movie's"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="10sp"
        android:layout_marginStart="5dp"
        android:textStyle="italic"
        tools:ignore="HardcodedText,SmallSp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView_TopRated"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"/>


    <TextView
        android:id="@+id/textView_latest_movies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="10dp"
        android:layout_marginStart="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:text="Latest Movie's"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slider"
        tools:ignore="HardcodedText,RtlHardcoded,SpUsage"/>

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:background="@drawable/four"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="0dp">

    </com.daimajia.slider.library.SliderLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_ScrollMovie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_latest_movies"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_TopRated"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_TopRated"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_MostVisited"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_MostVisited"
        />

</android.support.constraint.ConstraintLayout>
